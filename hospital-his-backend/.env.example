# LifelineX Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/his_database

# ===========================================
# SECURITY
# ===========================================
# JWT secret key - use a long random string (32+ characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ===========================================
# SERVER
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# CORS
# ===========================================
# Your Vercel frontend URL
CORS_ORIGIN=https://your-frontend.vercel.app

# ===========================================
# ML SERVICE URLs (Hugging Face Spaces)
# ===========================================
# Update these after deploying ML services to HF Spaces
ML_PREDICTIVE_URL=https://your-username-lifelinex-predictive.hf.space
ML_REVENUE_URL=https://your-username-lifelinex-revenue.hf.space
OCR_SERVICE_URL=https://your-username-lifelinex-ocr.hf.space

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===========================================
# GOOGLE AI (Optional - for AI features)
# ===========================================
# GOOGLE_AI_API_KEY=your-google-ai-api-key
